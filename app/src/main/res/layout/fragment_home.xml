<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/light_gray"
    tools:context=".fragment_home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/buttonMenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/menu"
            android:padding="4dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chama Segura"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/light_orange"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

        <Button
            android:id="@+id/register_pile_burn_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register New Pile Burn"
            android:backgroundTint="@color/light_orange"
            android:textColor="@android:color/white"
            android:layout_below="@id/app_title"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="O uso do fogo encontra-se associado à prática agrícola e florestal, no entanto as queimadas constituem atividades de risco, com graves danos ambientais, ecológicos e socioeconômicos. Cerca de 98% dos incêndios em Portugal Continental são causados por uso negligente do fogo."
            android:layout_below="@id/register_pile_burn_button"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white"/>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="373dp"
        android:layout_below="@id/info_text"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/burn_home" />

</LinearLayout>
